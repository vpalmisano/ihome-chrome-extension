{
    "manifest_version": 2,
    "name": "iHome",
    "author": "Vittorio Palmisano <vpalmisano@gmail.com>",
    "description": "iGoogle replacement extension.",
    "version": "0.0.0.2",
    "offline_enabled": false,
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com https://ajax.googleapis.com https://apis.google.com; object-src 'self';",
    "permissions": [
        "tabs"
    ],
    "icons": { 
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png" 
    },
    "browser_action": {
        "default_icon": "img/icon16.png",
        "default_title": "iHome"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    }
}
